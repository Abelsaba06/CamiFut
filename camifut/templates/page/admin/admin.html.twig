{% extends 'base.html.twig' %}
{% block title %}Zona Admin{% endblock %}
{% block body %}
    <main>
        <section class="category-grid">
            {% for categoria in categorias %}
                <div class="category-card">{{categoria.nombre}}</div> 
            {% endfor %}
            <div class="category-card"><button id="crearCategoria">Crear Categoria</button></div> 
            <div id="categoriaparacrear"></div>
        </section>
        <section class="category-grid">
            {% for camiseta in camisetas %}
                <div class="category-card">{{camiseta.equipo}}</div> 
            {% endfor %}
            <div class="category-card"><a href="{{path('crearCamiseta')}}">Crear Camiseta</a></div> 
        </section>
    </main>
{% endblock %}