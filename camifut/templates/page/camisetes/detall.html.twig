{% extends 'base.html.twig' %}

{% block title %}{{ camiseta.equipo }}{% endblock %}

{% block body %}
    <main>
        <div class="product-details">
                <h1>{{ camiseta.equipo }} {{camiseta.temporada}}</h1>
                <h2 style="color: #333;">Preu: {{ camiseta.precio }} €</h2>
            </div>
            {# COLUMNA IZQUIERDA: IMAGEN #}
            <div class="product-image">
                {# Asumiendo que guardas las imágenes en public/uploads o similar #}
                <img src="{{ asset('img/' ~ camiseta.imagen) }}" alt="{{ camiseta.equipo }}" style="max-width: 100%; height: auto;">
            </div>
            {# COLUMNA DERECHA: DETALLES #}
            
            <div class="product-container">
            <div class="size-guide">
                <h3>Medida de les talles</h3>
                <br>
                <table class="size-table">
                    <thead>
                        <tr>
                            <th>Talla</th>
                            <th>Ample (cm)</th>
                            <th>Llarg (cm)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr><td>S</td><td>50</td><td>69</td></tr>
                        <tr><td>M</td><td>53</td><td>71</td></tr>
                        <tr><td>L</td><td>56</td><td>73</td></tr>
                        <tr><td>XL</td><td>58</td><td>75</td></tr>
                        <tr><td>2XL</td><td>60</td><td>77</td></tr>
                        <tr><td>3XL</td><td>62</td><td>79</td></tr>
                    </tbody>
                </table>
        </div>
        <div class="product-details">

                <h3>Talla (elegida)</h3>

                <div class="size-selector">

                    <button class="size-btn">S</button>

                    <button class="size-btn">M</button>

                    <button class="size-btn active">L</button> <button class="size-btn">XL</button>

                    <button class="size-btn">2XL</button>

                    <button class="size-btn">3XL</button>

                </div>


                <h3>Personalització</h3>
                <div class="size-selector">
                    <button class="option-btn personalitzacio-btn active">Personalitzar</button>
                    <button class="option-btn">No personalitzar</button>
                </div>
                <h3>Parches:</h3>
                <div class="size-selector">
                    <select class="custom-input" style="width: auto;">
                        <option>Lliga</option>
                        <option>Competició Europa</option>
                        <option>Sense parche</option>
                    </select>
                </div>
                <div class="custom-form">
                    <p>Camiseta personalitzada</p>
                    <input type="text" placeholder="Nombre" class="custom-input">
                    <input type="number" placeholder="Dorsal" class="custom-input">
                </div>
                <div class="action-buttons">
                    <input type="number" placeholder="Quantitat" class="custom-input" value="1">
                    <button class="btn-primary">Afegeix al carret</button>

                </div>

            </div>  
        </div>
    </main>
{% endblock %}