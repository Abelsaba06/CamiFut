{% extends 'base.html.twig' %}

{% block title %}El teu carret - CamiFut{% endblock %}

{% block body %}
    <div class="cart-container">
        <h1>El teu carret</h1>
        
        {% if items is empty %}
            <div class="empty-cart">
                <p>El teu carret està buit.</p>
                <a href="{{ path('camisetes') }}" class="btn-primary">Veure camisetes</a>
            </div>
        {% else %}
            <form action="#" method="post">
                <table class="cart-table">
                    <thead>
                        <tr>
                            <th>Producte</th>
                            <th>Detalls</th>
                            <th>Preu</th>
                            <th>Quantitat</th>
                            <th>Total</th>
                            <th>Accions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                            <tr>
                                <td class="product-cell">
                                    <img src="{{ asset('img/' ~ item.product.imagen) }}" alt="{{ item.product.equipo }}" class="cart-product-img">
                                    <div class="cart-product-info">
                                        <h3>{{ item.product.equipo }}</h3>
                                        <p>{{ item.product.temporada }}</p>
                                    </div>
                                </td>
                                <td class="details-cell">
                                    <p><strong>Talla:</strong> {{ item.size }}</p>
                                    {% if item.personalization %}
                                        <p><strong>Personalització:</strong> {{ item.personalization }}</p>
                                    {% endif %}
                                    {% if item.patches and item.patches != 'Sense parche' %}
                                        <p><strong>Parche:</strong> {{ item.patches }}</p>
                                    {% endif %}
                                </td>
                                <td>{{ item.product.precio }} €</td>
                                <td>
                                    <input type="number" name="quantity[{{ item.key }}]" value="{{ item.quantity }}" min="1" class="cart-qty-input">
                                </td>
                                <td>{{ item.total }} €</td>
                                <td>
                                    <a href="#" class="btn-remove">Eliminar</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                
                <div class="cart-summary">
                    <div class="total-row">
                        <span>Total:</span>
                        <span class="total-price">{{ total }} €</span>
                    </div>
                    <div class="cart-actions">
                        <a href="{{ path('camisetes') }}" class="btn-continue">Continuar comprant</a>
                        <button type="submit" class="btn-checkout">Tramitar comanda</button>
                    </div>
                </div>
            </form>
        {% endif %}
    </div>
{% endblock %}
