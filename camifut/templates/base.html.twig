<!DOCTYPE html>
<html lang="ca-ES">
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Camifut{% endblock %}</title>
        <link href="{{ asset('img/logo.png') }}" rel="icon">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/estil.css') }}">
            <link rel="stylesheet" href="{{ asset('css/estilcarret.css') }}">
            <link rel="stylesheet" href="{{ asset('css/estilpaginadecamisetes.css') }}">
            <link rel="stylesheet" href="{{ asset('css/estilformularis.css') }}">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        <header>
            <div class="nav-container">
                <div class="logo"><img src="{{ asset('img/logo.png')}}"></div>
                <nav>
                    <ul>
                        <li><a href="{{ path('index') }}">Inicio</a></li>
                        <li><a href="{{ path('camisetes') }}">Camisetes</a></li>
                        <li><a href="{{ path('app_cart') }}">Carret</a></li>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li><a href="{{ path('logout') }}">Tancar sesió</a></li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><a href="{{ path('app_admin') }}">Admin</a></li>
                            {% endif %}
                        {% else %}
                            <li><a href="{{ path('login') }}">Iniciar sesió</a></li>
                            <li><a href="{{ path('register') }}">Registrarse</a></li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        </header>
        {% block body %}{% endblock %}
        <footer>
        <p>&copy; {{ "now"|date("Y") }} Abel Sabater - Camifut</p>
        <p>Tots els drets reservats</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('js/app.js')}}"></script>
    <script src="{{ asset('js/categoria.js')}}"></script>
    <script src="{{ asset('js/detall.js')}}"></script>
    <script src="{{ asset('js/carret.js')}}"></script>
    </body>
</html>